<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/walkthrough_container">

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/walkthrough_pageindicator"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingTop="@dimen/padding_small"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/walkthrough_viewpager"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_micro"
        android:background="@color/red">

        <TextView
            android:id="@+id/walkthrough_back"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="@string/back"
            android:textColor="@color/white_greypressed"
            android:textSize="@dimen/text_medium"
            android:clickable="true"
            android:gravity="left"/>

        <TextView
            android:id="@+id/walkthrough_next"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="@string/next"
            android:textColor="@color/white_greypressed"
            android:textSize="@dimen/text_medium"
            android:clickable="true"
            android:gravity="right"/>
    </LinearLayout>

</LinearLayout>