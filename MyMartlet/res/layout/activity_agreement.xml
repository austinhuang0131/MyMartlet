<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eula_title"
                android:gravity="center"
                android:textSize="@dimen/text_medium"
                android:paddingTop="@dimen/padding_micro"
                android:paddingBottom="@dimen/padding_micro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eula_description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eula_parties"
                android:textSize="@dimen/text_medium"
                android:paddingTop="@dimen/padding_micro"
                android:paddingBottom="@dimen/padding_micro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eula_parties_decription"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eula_privacy"
                android:textSize="@dimen/text_medium"
                android:paddingTop="@dimen/padding_micro"
                android:paddingBottom="@dimen/padding_micro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eula_privacy_description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eula_content"
                android:textSize="@dimen/text_medium"
                android:paddingTop="@dimen/padding_micro"
                android:paddingBottom="@dimen/padding_micro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eula_content_description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eula_license"
                android:textSize="@dimen/text_medium"
                android:paddingTop="@dimen/padding_micro"
                android:paddingBottom="@dimen/padding_micro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eula_license_description"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>