<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/padding_micro"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_title"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:text="@string/course_time_title"
            android:paddingTop="@dimen/padding_micro"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_time"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginStart="@dimen/padding_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:paddingTop="@dimen/padding_micro"
            android:text="@string/course_location"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_location"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginStart="@dimen/padding_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:paddingTop="@dimen/padding_micro"
            android:text="@string/schedule_type"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_type"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginStart="@dimen/padding_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:paddingTop="@dimen/padding_micro"
            android:text="@string/course_prof"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_instructor"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginStart="@dimen/padding_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:paddingTop="@dimen/padding_micro"
            android:text="@string/course_section"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_section"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginStart="@dimen/padding_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:paddingTop="@dimen/padding_micro"
            android:text="@string/course_credits_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_credits"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginStart="@dimen/padding_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:paddingTop="@dimen/padding_micro"
            android:text="@string/course_crn"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_crn"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginStart="@dimen/padding_small"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/schedule_line"
            android:background="@color/grey_light"
            android:layout_marginTop="@dimen/padding_micro"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_docuum"
            android:background="@drawable/transparent_redpressed"
            android:textColor="@android:color/black"
            android:text="@string/course_docuum"
            android:gravity="center"
            android:padding="@dimen/padding_micro"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/schedule_line"
            android:background="@color/grey_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_map"
            android:background="@drawable/transparent_redpressed"
            android:textColor="@android:color/black"
            android:text="@string/course_map"
            android:gravity="center"
            android:padding="@dimen/padding_micro"
            android:visibility="gone"/>

        </LinearLayout>

</ScrollView>