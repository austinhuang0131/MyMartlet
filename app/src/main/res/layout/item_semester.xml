<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/transparent_redpressed">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/padding_micro"
        android:layout_marginBottom="@dimen/padding_micro">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:duplicateParentState="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:duplicateParentState="true"
                android:textSize="@dimen/text_medium"
                tools:text="Fall 2000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gpa"
                android:duplicateParentState="true"
                android:textSize="@dimen/text_small"
                android:layout_marginLeft="@dimen/padding_micro"
                android:layout_marginStart="@dimen/padding_micro"
                tools:text="GPA"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_chevron_right"
            android:tint="@color/red"
            android:gravity="center"
            android:contentDescription="@null"/>

    </LinearLayout>

    <include layout="@layout/line"/>

</LinearLayout>