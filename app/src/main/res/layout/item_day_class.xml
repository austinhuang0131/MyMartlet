<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/cell_30min_height"
    android:background="@drawable/red_darkredpressed"
    android:clickable="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/schedule_line"
        android:layout_gravity="center"
        android:background="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_code"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/white_greypressed"
        android:duplicateParentState="true"
        android:paddingLeft="@dimen/padding_micro"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_time"
        android:textColor="@color/white_greypressed"
        android:duplicateParentState="true"
        android:paddingLeft="@dimen/padding_micro"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_location"
        android:textColor="@color/white_greypressed"
        android:duplicateParentState="true"
        android:paddingLeft="@dimen/padding_micro"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_type"
        android:textStyle="italic"
        android:textColor="@color/white_greypressed"
        android:duplicateParentState="true"
        android:paddingLeft="@dimen/padding_micro"/>
    </LinearLayout>