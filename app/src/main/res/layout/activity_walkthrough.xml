<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/walkthrough_container">

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/walkthrough_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="@string/skip"
        android:textSize="@dimen/text_medium"
        android:paddingLeft="@dimen/padding_micro"
        android:paddingRight="@dimen/padding_micro"
        android:paddingTop="@dimen/padding_micro"/>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/walkthrough_viewpager"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_drawer">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/walkthrough_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="@string/back"
            android:textSize="@dimen/text_medium"
            android:gravity="start"
            android:visibility="invisible"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/walkthrough_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="@string/next"
            android:textSize="@dimen/text_medium"
            android:gravity="end"/>
    </LinearLayout>

</LinearLayout>