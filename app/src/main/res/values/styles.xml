<?xml version="1.0" encoding="utf-8"?>

<!-- Base Styles File -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- App Theme -->
    <style name="Theme.MyMartlet" parent="Theme.MyMartlet.Base">
        <!--<item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.MyMartlet</item>-->
    </style>

    <!-- App Base Theme -->
    <style name="Theme.MyMartlet.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- App Bar Color -->
        <item name="colorPrimary">@color/red</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/red_dark</item>
        <!-- UI Control Color -->
        <item name="colorAccent">@color/red</item>
        <item name="colorButtonNormal">@color/red</item>
        <!-- Button -->
        <item name="buttonStyle">@style/Theme.MyMartlet.Button</item>
        <!-- EditText Highlight Color -->
        <item name="android:textColorHighlight">#99db231e</item>
        <!-- Alert Dialog -->
        <item name="alertDialogTheme">@style/Theme.MyMartlet.AlertDialog</item>
        <!-- Default Text Color -->
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme.MyMartlet.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/red</item>
    </style>

    <!-- Dark theme for the toolbar -->
    <style name="Theme.MyMartlet.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Primary Text Color -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- OverFlow menu Styles -->
    <style name="Theme.MyMartlet.PopupMenu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Action Bar Tab Text Style -->
    <style name="ActionBarTabTextStyle.MyMartlet" parent="@android:style/Widget.ActionBar.TabText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Button -->
    <style name="Theme.MyMartlet.Button" parent="Widget.AppCompat.Button">
      <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.MyMartlet.Drawer" parent="Theme.MyMartlet">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>