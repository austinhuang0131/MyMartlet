<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_change_semester"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/title_change_semester"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"
        android:textColor="@color/red"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_micro"
        android:paddingBottom="@dimen/padding_micro"
        android:paddingTop="@dimen/padding_small" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/change_semester_season"
            android:textSize="@dimen/text_medium" />

        <Spinner
            android:id="@+id/change_semester_season"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_micro"
        android:paddingTop="@dimen/padding_small" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/change_semester_year"
            android:textSize="@dimen/text_medium" />

        <Spinner
            android:id="@+id/change_semester_year"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/change_semester_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_semester_default"
        android:textSize="@dimen/text_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_micro"
        android:paddingTop="@dimen/padding_small" >

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding_large"
            android:text="@android:string/cancel"
            android:textSize="@dimen/text_medium"
            android:onClick="cancelPress" />

        <Button
            android:id="@+id/ok_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding_large"
            android:text="@android:string/ok"
            android:textSize="@dimen/text_medium"
            android:onClick="okPress" />
    </LinearLayout>

</LinearLayout>