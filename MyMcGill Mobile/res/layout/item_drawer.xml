<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_micro"
    android:background="@drawable/drawable_drawerblack_darkredpressed">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/drawerItem_icon"
        android:textSize="@dimen/text_large"
        android:duplicateParentState="true"
        android:gravity="center"
        android:paddingRight="@dimen/padding_micro"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:id="@+id/drawerItem_title"
        android:textSize="@dimen/text_medium"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:textColor="@color/white"/>
    
    <TextView
        android:id="@+id/drawer_email_count"
        android:layout_width="wrap_content"
  		android:layout_height="match_parent"
  		android:textColor="@color/white"
  		android:textSize="@dimen/text_small"
  		android:textStyle="bold"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_micro"
        android:paddingRight="@dimen/padding_micro"
 		android:background="@drawable/badge_circle"/>

</LinearLayout>