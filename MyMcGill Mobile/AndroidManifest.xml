<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mcgill.mymcgill"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".util.ApplicationClass"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:debuggable="true"
        android:vmSafeMode="true"
        android:allowClearUserData="true"
        android:hardwareAccelerated="true">
        <activity android:name=".activity.LoginActivity"
            android:label="@string/title_login"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DesktopActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_desktop" />
        
        <activity android:name=".activity.ScheduleActivity"
            android:label="@string/title_schedule"
            android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity android:name=".activity.transcript.TranscriptActivity"
            android:label="@string/title_transcript"
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity android:name=".activity.semester.SemesterActivity"/>

        <activity android:name=".activity.CourseActivity"
            android:theme="@android:style/Theme.Dialog"/>
       <activity
            android:name=".activity.ebill.EbillActivity"
            android:label="@string/title_ebill"
            android:screenOrientation="portrait">
       </activity>

       <activity android:name=".activity.inbox.InboxActivity"
            android:label="@string/title_inbox"/>

       <activity android:name=".activity.SettingsActivity"
           android:label="@string/title_settings"/>
       
       <activity android:name=".activity.EmailActivity"
       android:parentActivityName=".activity.inbox.InboxActivity"/>
       

       <activity android:name=".activity.inbox.ReplyActivity"
           android:label="@string/title_reply"
           android:windowSoftInputMode="adjustPan"/>

    </application>

</manifest>