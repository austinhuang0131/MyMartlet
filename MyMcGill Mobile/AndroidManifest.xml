<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mcgill.mymcgill"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="com.example.googlemaps.permission.MAPS_RECEIVE" />
    <permission
        android:name="com.example.googlemaps.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:name="ca.mcgill.mymcgill.util.ApplicationClass"
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:debuggable="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMcGill"
        android:vmSafeMode="true" >
        <activity
            android:name="ca.mcgill.mymcgill.activity.LoginActivity"
            android:label="@string/title_login"
            android:screenOrientation="portrait"/>
        <activity
            android:name="ca.mcgill.mymcgill.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.mcgill.mymcgill.activity.DesktopActivity"
            android:label="@string/title_desktop"
            android:screenOrientation="portrait"/>
        <activity
            android:name="ca.mcgill.mymcgill.activity.ScheduleActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_schedule" />
        <activity
            android:name="ca.mcgill.mymcgill.activity.transcript.TranscriptActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_transcript" />
        <activity android:name="ca.mcgill.mymcgill.activity.semester.SemesterActivity"/>
        <activity
            android:name="ca.mcgill.mymcgill.activity.CourseActivity"
            android:theme="@style/DialogMyMcGill"
            android:screenOrientation="portrait"/>
        <activity
            android:name="ca.mcgill.mymcgill.activity.ebill.EbillActivity"
            android:label="@string/title_ebill"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="ca.mcgill.mymcgill.activity.inbox.InboxActivity"
            android:label="@string/title_inbox"
            android:screenOrientation="portrait"/>
        <activity
            android:name="ca.mcgill.mymcgill.activity.SettingsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="ca.mcgill.mymcgill.activity.EmailActivity"
            android:parentActivityName=".activity.inbox.InboxActivity"/>
        <activity
            android:name="ca.mcgill.mymcgill.activity.inbox.ReplyActivity"
            android:label="@string/title_reply"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="ca.mcgill.mymcgill.activity.inbox.AttachActivity"
            android:label="@string/title_activity_attach">
        </activity>
        <activity
            android:name="ca.mcgill.mymcgill.activity.MapActivity"
            android:label="@string/title_map"/>
        
        <activity
            android:name="ca.mcgill.mymcgill.activity.ChangeSemesterActivity"
            android:theme="@style/DialogMyMcGill"
            android:screenOrientation="portrait"/>

        <!--
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY" />
		-->
    </application>

</manifest>